{
    "manifest_version": 3,
    "name": "Tab Color Changer",
    "version": "1.0",
    "description": "Changes the tab color based on the URL.",
    "permissions": [
        "tabs",
        "activeTab",
        "scripting",
        "storage"
    ],
    "host_permissions": ["*://*/*"],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "options_page": "popup.html"
}